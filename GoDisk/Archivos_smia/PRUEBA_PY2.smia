# PRUEBA GODISK - MIA 2S 2025
# 3 Discos - Validación de errores
# MODIFICAR EL 12 CON LOS ULTIMOS DIGITOS DE SU CARNET
#  1: CREAR DISCOS Y VALIDAR ERRORES

# ERROR: Parámetro incorrecto
mkdisk -param=x -size=30 -path=/tmp/Pruebas_MIA/DiscoError.mia

# ERROR: Tamaño incorrecto
mkdisk -tamaño=3000 -unit=K -path=/tmp/Pruebas_MIA/DiscoError.mia

# Disco A - 25MB
mkdisk -size=25 -unit=M -fit=FF -path=/tmp/Pruebas_MIA/DiscoA.mia

# Disco B - 30MB
mkdisk -size=60 -unit=M -fit=BF -path=/tmp/Pruebas_MIA/DiscoB.mia

# Disco C - 15MB
mkdisk -size=15 -unit=M -path=/tmp/Pruebas_MIA/DiscoC.mia

#  2: RMDISK - ELIMINAR DISCOS

# ERROR: Disco no existe
rmdisk -path=/tmp/Pruebas_MIA/DiscoNoExiste.mia

# Crear discos temporales para pruebas de eliminación
mkdisk -size=10 -unit=M -path=/tmp/Pruebas_MIA/DiscoTemp1.mia
mkdisk -size=8 -unit=M -path=/tmp/Pruebas_MIA/DiscoTemp2.mia

# Eliminar discos temporales
rmdisk -path=/tmp/Pruebas_MIA/DiscoTemp1.mia
rmdisk -path=/tmp/Pruebas_MIA/DiscoTemp2.mia

# ERROR: Intentar eliminar disco ya eliminado
rmdisk -path=/tmp/Pruebas_MIA/DiscoTemp1.mia

#  3: FDISK - CREAR PARTICIONES

# ERROR: Ruta no encontrada
fdisk -type=P -unit=M -name=PartError -size=10 -path=/tmp/Pruebas_MIA/DiscoError.mia -fit=BF

# Disco A - 3 particiones primarias
fdisk -type=P -unit=M -name=PartA1 -size=8 -path=/tmp/Pruebas_MIA/DiscoA.mia -fit=BF
fdisk -type=P -unit=M -name=PartA2 -size=8 -path=/tmp/Pruebas_MIA/DiscoA.mia -fit=BF
fdisk -type=P -unit=M -name=PartA3 -size=8 -path=/tmp/Pruebas_MIA/DiscoA.mia -fit=BF

# ERROR: Límite de particiones primarias
fdisk -type=P -unit=M -name=PartError -size=5 -path=/tmp/Pruebas_MIA/DiscoA.mia -fit=BF

# Disco B - Partición extendida con lógicas
fdisk -type=E -unit=M -name=PartExtB -size=35 -path=/tmp/Pruebas_MIA/DiscoB.mia -fit=BF
fdisk -type=L -unit=M -name=PartB1 -size=5 -path=/tmp/Pruebas_MIA/DiscoB.mia -fit=BF
fdisk -type=L -unit=M -name=PartB2 -size=5 -path=/tmp/Pruebas_MIA/DiscoB.mia -fit=BF
fdisk -type=L -unit=M -name=PartB3 -size=5 -path=/tmp/Pruebas_MIA/DiscoB.mia -fit=BF

# Disco C - 2 particiones
fdisk -type=P -unit=M -name=PartC1 -size=8 -path=/tmp/Pruebas_MIA/DiscoC.mia
fdisk -type=P -unit=M -name=PartC2 -size=6 -path=/tmp/Pruebas_MIA/DiscoC.mia

# ERROR: Falta espacio
fdisk -type=P -unit=M -name=PartError -size=20 -path=/tmp/Pruebas_MIA/DiscoC.mia

#  4: MOUNT - MONTAR PARTICIONES

# ERROR: Partición no existe
mount -path=/tmp/Pruebas_MIA/DiscoA.mia -name=PartNoExiste

# Montar particiones
mount -path=/tmp/Pruebas_MIA/DiscoA.mia -name=PartA1
mount -path=/tmp/Pruebas_MIA/DiscoA.mia -name=PartA2
mount -path=/tmp/Pruebas_MIA/DiscoB.mia -name=PartB1
mount -path=/tmp/Pruebas_MIA/DiscoC.mia -name=PartC1

# ERROR: Partición ya montada
mount -path=/tmp/Pruebas_MIA/DiscoA.mia -name=PartA1

# Ver particiones montadas
mounted

#  5: MKFS - FORMATEAR PARTICIONES

# ERROR: ID no encontrado
mkfs -type=full -fs=ext3 -id=999X

# Formatear con EXT3 con journaling 
mkfs -type=full -fs=ext3 -id=391A

# Formatear con EXT3 con journaling
mkfs -type=full -fs=ext3 -id=392A

# Formatear resto con EXT3 (solo particiones primarias y lógicas, NO extendidas)
mkfs -type=full -fs=ext3 -id=391B


